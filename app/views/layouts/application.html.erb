<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navibar">
    <%= link_to 'Breweries', breweries_path %>
    <%= link_to 'Beers', beers_path %>
    <%= link_to 'Ratings', ratings_path %>
    <%= link_to 'Users', users_path %>
    <%= link_to 'Clubs', beerclubs_path %>
    <%= link_to 'Places', places_path %>
    <%= link_to 'Styles', styles_path %>
    <% if current_user %>
      <%= link_to 'Join a club', memberships_path + "/new" %>
      <%= link_to 'Rate a beer', ratings_path + "/new" %>
      <%= link_to current_user.username, current_user %>
      <%= link_to 'Sign out', sessions_path, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% else %>
      <%= link_to 'Sign in', signin_path %>
      <%= link_to 'Sign up', signup_path %>
    <% end %>
  </div>
  <% if session[:last_rating].nil? %>
    <p>no ratings given</p>
  <% else %>
    <p>previous rating: <%= session[:last_rating] %></p>
  <% end %>
  <%= yield %>

</body>
</html>
