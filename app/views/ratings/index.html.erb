<h2>Rating statistics</h2>


<div class="col-md-4">
  <h3>
    Best beers
  </h3>
  <%= render 'list', items: @best_beers %>
</div>
<div class="col-md-4">
  <h3>
    Best breweries
  </h3>
  <%= render 'list', items: @best_breweries %>
</div>
<div class="col-md-4">
  <h3>
    Best styles
  </h3>
  <%= render 'list', items: @best_styles %>
</div>

<div class="col-md-8">
  <h3>
    Most active users
  </h3>
  <table class="table table-hover">
    <thead>
    <tr>
      <th colspan="1"></th>
      <th>favorite beer</th>
      <th>preferred style</th>
      <th>favorite brewery</th>
      <th>ratings</th>
    </tr>
    </thead>

    <tbody>
    <% @most_active_users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user %></td>
          <td><%= user.favorite_beer.name if user.favorite_beer %> </td>
          <td><%= user.favorite_style.name if user.favorite_style %> </td>
          <td><%= user.favorite_brewery.name if user.favorite_brewery %> </td>
          <td><%= user.ratings.count %> </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-8">
  <h3>
    Recent ratings
  </h3>
  <table class="table table-hover">

    <tbody>
    <% @recent_ratings.each do |rating| %>
        <tr>
          <td><%= rating %></td>
          <td><%= link_to rating.user.username, rating.user %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
