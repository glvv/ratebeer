<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user%></td>
        <% if user.blocked %>
          <td><span class="label label-info">account frozen</span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
